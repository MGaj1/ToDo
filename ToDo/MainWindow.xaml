<Window x:Class="ToDo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Background= "Tomato">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="261*"/>
            <ColumnDefinition Width="283*"/>
            <ColumnDefinition Width="256*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="41,0,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="196" Height="40"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Margin="41,0,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Center" Width="196" Height="40"/>
        <TextBlock HorizontalAlignment="Left" Margin="222,0,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Login" VerticalAlignment="Center"/>
    </Grid>
</Window>
